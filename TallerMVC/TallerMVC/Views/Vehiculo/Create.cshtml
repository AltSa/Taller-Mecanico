@model TallerMVC.Models.Vehiculo

@{
    ViewBag.Title = "Create";
}

<h2>Crear Vehiculo</h2>

<p>
    @Html.ActionLink("Crear Nuevo Propietario", "Create","Propietario",null, new { @class="btn btn-secondary"})
</p>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Vehiculo</legend>

        

        <div class="editor-label">
            @Html.LabelFor(model => model.nroPatente,"Patente")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nroPatente)
            @Html.ValidationMessageFor(model => model.nroPatente)
        </div>
        @if (ViewBag.VehiculoRepetido != null)
        { 
            <p>@ViewBag.VehiculoRepetido</p>
        }
        <div class="editor-label">
            @Html.LabelFor(model => model.marca,"Marca")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.marca)
            @Html.ValidationMessageFor(model => model.marca)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idPropietario, "Propietario")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idPropietario", String.Empty)
            @Html.ValidationMessageFor(model => model.idPropietario)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    <p>
    @Html.ActionLink("Lista de Vehiculos", "Index",null, new { @class="btn btn-success"})
    @Html.ActionLink("Lista de Propietarios", "Index","Propietario",null, new { @class="btn btn-success"})
    </p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
