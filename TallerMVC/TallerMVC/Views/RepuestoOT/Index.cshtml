@model IEnumerable<TallerMVC.Models.RepuestoOT>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",null, new { @class="btn btn-secondary"})
    @Html.ActionLink("Cerrar Sesion", "Index","Home",null, new { @class="btn btn-danger"})
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idRepuestoOT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdenDeTrabajo.detalleFalla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Repuesto.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadDeRepuesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadHorasTrabajo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idRepuestoOT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrdenDeTrabajo.detalleFalla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Repuesto.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadDeRepuesto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadHorasTrabajo)
        </td>
       
    </tr>
}

</table>
