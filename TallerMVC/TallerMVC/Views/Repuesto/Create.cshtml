@model TallerMVC.Models.Repuesto

@{
    ViewBag.Title = "Create";
}

<h2>Crear Repuesto</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Repuesto</legend>

        

        <div class="editor-label">
            @Html.LabelFor(model => model.nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombre)
            @Html.ValidationMessageFor(model => model.nombre)
        </div>

        @if (ViewBag.RepuestoRepetido != null)
        { 
            <p>@ViewBag.RepuestoRepetido</p>
        }

        <div class="editor-label">
            @Html.LabelFor(model => model.costo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.costo)
            @Html.ValidationMessageFor(model => model.costo)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista de Repuestos", "Index",null, new { @class="btn btn-secondary"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
