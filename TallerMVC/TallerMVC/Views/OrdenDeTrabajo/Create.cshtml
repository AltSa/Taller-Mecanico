@model TallerMVC.Models.OrdenDeTrabajo


@{
    ViewBag.Title = "Crear";

    
}


<h2>Crear Orden de trabajo</h2>

<p>
    @Html.ActionLink("Crear Nuevo Vehiculo", "Create","Vehiculo", null, new { @class="btn btn-secondary"})
</p>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>OrdenDeTrabajo</legend>
        

        <div class="editor-label">
            @Html.LabelFor(model => model.detalleFalla,"Detalles de la falla")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.detalleFalla)
            @Html.ValidationMessageFor(model => model.detalleFalla)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idVehiculo, "Vehiculo")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idVehiculo", String.Empty)
            @Html.ValidationMessageFor(model => model.idVehiculo)
        </div>


      

        
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
   <p> @Html.ActionLink("Volver al index", "Index",null, new { @class="btn btn-success" })</p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
